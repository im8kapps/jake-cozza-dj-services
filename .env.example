# Environment Variables for Jake Cozza DJ Services
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Resend Email Service
# Get your API key from https://resend.com
RESEND_API_KEY=re_your-api-key-here

# Email Configuration
FROM_EMAIL=noreply@jakecozzadj.com
ADMIN_EMAIL=jakecozzadj@gmail.com

# Optional: Customer confirmation emails (set to 'false' to disable)
SEND_CUSTOMER_CONFIRMATION=true

# Optional: Simple admin dashboard authentication
# Set a secure password for accessing /admin.html
ADMIN_PASSWORD=your-secure-admin-password-here

# Development/Production Environment
NODE_ENV=production